<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user1.practicafinaluf2.Sonido">

    <ToggleButton
        android:text="@string/grabar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnGrabar"
        android:onClick="onClickBotonGrabar"
        android:layout_alignParentTop="true"
        android:textOff="@string/grabar"
        android:textOn="Parar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp" />

    <Button
        android:text="@string/reproducir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnReproducir"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:onClick="onClickBotonReproducir" />

    <Button
        android:text="Volver"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="43dp"
        android:id="@+id/btnVolver" />
</RelativeLayout>
